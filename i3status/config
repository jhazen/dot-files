general {
        colors = true
        interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "read_file packetloss"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "WLAN0: %quality %bitrate %ip"
        format_down = "WLAN0: down"
}

ethernet _first_ {
        format_up = "ETH0: %speed %ip"
        format_down = "ETH0: down"
}

battery all {
        format = "BATT: %status %percentage"
}

disk "/" {
        format = "DISK AVAIL /: %avail"
}

load {
        format = "LOAD: %1min"
}

memory {
        format = "MEM USED: %used | MEM AVAIL: %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

read_file packetloss {
        format = "%content"
        path = "/home/jesse/.packet_loss"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
